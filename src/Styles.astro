<style is:global>
  @font-face {
    font-family: "Kalam";
    src: url("/fonts/Kalam/Kalam-Light.ttf") format("TrueType");
    font-weight: 300;
    font-style: light;
  }
  @font-face {
    font-family: "Kalam";
    src: url("/fonts/Kalam/Kalam-Regular.ttf") format("TrueType");
    font-weight: 400;
    font-style: normal;
  }
  @font-face {
    font-family: "Kalam";
    src: url("/fonts/Kalam/Kalam-Bold.ttf") format("TrueType");
    font-weight: 700;
    font-style: bold;
  }

  * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    text-decoration: none;
  }
  html {
    font-size: 16px;
    --primary-dark: #075477;
    --primary: #20a6dc;
    --text: #fff;
    --bg: #000;
    --bg-trans: #000a;
    --bg-dark: #000;
    --white: #fff;
    --black: #111;
    --content-max: 1400px;
    --text-shadow: #43434355;
    --border-radius: 0.5rem;
    --shadow: 0px 0px 15px 5px var(--primary);
    --header-height: 5rem;

    background: var(--bg);
    font-family: "Kalam", sans-serif;
    color: var(--text);
    scroll-behavior: smooth;
    overflow-x: hidden;
  }

  .hero {
    padding-top: 0 !important;
    position: relative;
  }
  .container {
    width: 100%;
    max-width: var(--content-max);
    margin-left: auto;
    margin-right: auto;
    padding: 1rem;
    position: relative;
  }
  .container.fh {
    min-height: calc(100dvh - var(--header-height) - 2.5rem);
  }
  .container-inner {
    display: flex;
    flex-direction: column;
    width: 100%;
    min-height: calc(100dvh - var(--header-height) - 6rem);
    align-items: center;
    justify-content: center;
  }
  .container-inner.between {
    justify-content: space-between;
  }
  .container-inner.evenly {
    justify-content: space-evenly;
  }
  .btn {
    background: var(--primary);
    box-shadow: 0px 0px 9px 3px var(--primary);
    border: none;
    font-size: 1rem;
    padding: 1rem 2rem;
    color: #fff;
    cursor: pointer;
    transition: background 250ms;
  }
  .btn:hover {
    background: var(--primary-dark);
  }
  .btn:disabled {
    background: #333;
    cursor: default;
    box-shadow: none;
  }
  .glass-bg {
    background: var(--bg-trans);
    backdrop-filter: blur(3px);
  }

  .section-title {
    color: var(--bg-trans);
    line-height: 1;
    /* -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: var(--primary); */
    text-shadow:
      0px 0px 5px var(--primary),
      0px 0px 15px var(--primary),
      0px 0px 25px var(--primary),
      0px 0px 35px var(--primary);
  }

  .section-title.sticky {
    position: sticky;
    top: calc(var(--header-height) + 2rem);
    z-index: 10;
  }

  h2.section-title {
    font-size: 3rem;
  }

  .nebula-text {
    /* text-shadow: 0px 0px 0px var(--text); */
    color: white;
    /* background: url("/nebula.png"); */
    /* background-size: 100%; */
    background: black;
    /* background-clip: text; */
    -webkit-text-stroke: 2px var(--primary);
    mix-blend-mode: multiply;
  }

  @media screen and (max-width: 1400px) {
    h2.section-title {
      background: var(--bg-trans);
      backdrop-filter: blur(4px);
      width: fit-content;
      padding: 1rem;
      border: 1px solid var(--primary);
      border-radius: var(--border-radius);
      margin-bottom: 2rem;
    }
  }

  @media screen and (max-width: 700px) {
    html {
      font-size: 14px;
    }
  }
</style>

<style is:global>
  .fade-in {
    opacity: 0;
    transition: opacity 1000ms;
  }
  .fade-in.visible {
    opacity: 1;
  }
  .slide-in-left {
    translate: -10rem;
    opacity: 0;
    transition:
      translate 750ms,
      opacity 1000ms;
  }
  .slide-in-left.visible {
    translate: 0;
    opacity: 1;
  }
  .shadow-in {
    box-shadow: 0px 0px 0px 0px var(--primary);
    transition: box-shadow 1000ms;
  }
  .shadow-in.visible {
    box-shadow: 0px 0px 10px 7px var(--primary);
  }
</style>
