<section id="hero" class="hero">
  <div class="container fh" id="hero-content">
    <div class="container-inner">
      <h1 class="title fade-in" scroll-anim>
        Mike Rust<br /><span>Web Developer</span>
      </h1>
    </div>
    <!-- <h2 class="title">Web Developer</h2> -->
  </div>
</section>

<style>
  .hero {
    height: calc(100vh - var(--header-height));
  }

  .container-inner {
    gap: 0;
  }

  h2.title {
    animation-name: enter-bottom;
  }

  @keyframes enter {
    0% {
      scale: 0% 0%;
      rotate: x 88deg;
      color: #0000;
      text-shadow:
        -4vw 0px 80px var(--primary),
        4vw 0px 80px var(--primary),
        -4vw 0px 80px var(--primary),
        4vw 0px 80px var(--primary);
    }
    20% {
      scale: 100% 0%;
      rotate: x 88deg;
      color: #0000;
      text-shadow:
        -4vw 0px 80px var(--primary),
        4vw 0px 80px var(--primary),
        -4vw 0px 80px var(--primary),
        4vw 0px 80px var(--primary);
    }
    80% {
      scale: 110% 110%;
      color: #0000;
      rotate: x 0deg;
      text-shadow:
        -4px 0px 120px var(--primary),
        4px 0px 120px var(--primary),
        -4px 0px 120px var(--primary),
        4px 0px 120px var(--primary);
    }
    100% {
      scale: 100% 100%;
      rotate: x 0deg;
      color: #000f;
      text-shadow:
        0px 0px 5px var(--primary),
        0px 0px 15px var(--primary),
        0px 0px 25px var(--primary),
        0px 0px 35px var(--primary);
    }
  }
</style>
