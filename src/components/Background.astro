<div id="background-container">
  <img id="nebula" src="/nebula.png" />
  <img id="stars" src="/stars.png" />
</div>

<script>
  // @ts-ignore
  const nebula = document.getElementById("nebula");
  const stars = document.getElementById("stars");
  window.addEventListener("scroll", (e) => {
    nebula.style.top = (-1 * window.scrollY) / 2 + "px";
    nebula.style.left = (-1 * window.scrollY) / 4 + "px";
    nebula.style.transform = `rotateZ(${window.scrollY / 180}deg)`;
    stars.style.top = (-1 * window.scrollY) / 10 + "px";
    stars.style.left = (-1 * window.scrollY) / 15 + "px";
    stars.style.transform = `rotateZ(${(-1 * window.scrollY) / 180}deg)`;
  });
</script>

<style>
  #background-container {
    position: fixed;
    inset: 0;
  }
  img {
    position: absolute;
    left: 0;
    top: 0;
  }
  #stars {
    object-fit: cover;
    width: 100%;
    height: 100%;
    scale: 150%;
    opacity: 0.5;
  }
  #nebula {
    position: absolute;
    left: 0;
    top: 0;
  }
</style>
