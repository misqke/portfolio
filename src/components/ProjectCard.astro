---
const { project, index } = Astro.props;
const bg = "--bg: url(" + project.src + ");";
const className =
  index == 0 ? "project-card fade-in selected" : "project-card fade-in";
---

<div class={className} style={bg} scroll-anim data-index={index}>
  {index != 0 ? <img src={project.src} /> : ""}
</div>

<style>
  .project-card {
    width: 100%;
    height: 100%;
    position: relative;
    border: 1px solid var(--primary);
    overflow: hidden;
    background: var(--bg);
    background-size: cover;
    background-position: center;
    cursor: pointer;
  }
  .project-card.selected {
    box-shadow: 0px 0px 10px 7px var(--primary);
  }
  img {
    width: 100%;
    height: 100%;
    background: #000;
    object-fit: cover;
  }
</style>
