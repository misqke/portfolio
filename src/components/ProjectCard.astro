---
const { project, index } = Astro.props;
// const bg = "--bg: url(" + project.src + ");";
const className =
  index == 0 ? "project-card fade-in selected" : "project-card fade-in";
---

<div class={className} scroll-anim data-index={index}>
  {index != 0 ? <img src={project.src} /> : ""}
  <div class="text-box">
    <h3>{project.title}</h3>
  </div>
  <!-- <img src={project.src} /> -->
</div>

<style>
  .project-card {
    width: 100%;
    /* min-width: 325px; */
    height: 100%;
    position: relative;
    border: 1px solid var(--primary);
    overflow: hidden;
    background: var(--bg);
    background-size: cover;
    background-position: center;
    cursor: pointer;
  }
  .project-card.selected {
    box-shadow: 0px 0px 10px 7px var(--primary);
  }
  .text-box {
    position: absolute;
    inset: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    background: #0003;
    display: grid;
    place-content: center;
    text-align: center;
    padding: 0.5rem;
  }
  h3 {
  }
  img {
    width: 100%;
    height: 100%;
    background: #000;
    z-index: 1;
    object-fit: cover;
    position: relative;
  }
</style>
