---
import Section from "../components/Section.astro";
---

<Section id="contact" fullHeight="true">
  <div class="container">
    <h2>Contact</h2>
    <div id="contact-body">
      <div id="form-container">
        <form>
          <div class="form-control">
            <label for="name-input">Name</label>
            <input type="text" id="name-input" name="name-input" />
          </div>
          <div class="form-control">
            <label for="email-input">Email</label>
            <input type="text" id="email-input" name="email-input" />
          </div>
          <div class="form-control">
            <label for="message-input">Message</label>
            <textarea id="message-input" name="message-input"></textarea>
          </div>
          <div>
            <button id="contact-submit-button" type="submit">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</Section>

<style>
  #contact-body {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }
  #form-container {
    width: 100%;
    max-width: 600px;
  }
  .form-control {
    display: flex;
    flex-direction: column;
    input,
    textarea {
      background-color: var(--bg);
      color: var(--text);
      font-size: 1rem;
      padding: 0.5rem;
    }
  }
  form {
    width: 100%;
  }
</style>
