<header id="header">
  <div id="header-inner">
    <div id="logo-btns">
      <a href="#" onclick="javascript:scrollTo(top);">
        <div class="nav-item">
          <p class="title">Mike<span>Rust</span></p>
        </div>
      </a>
    </div>
    <nav>
      <ul>
        <li>
          <a href="#about" class="nav-item" data-link="about">About</a>
        </li>
        <li>
          <a href="#projects" class="nav-item" data-link="projects">Projects</a>
        </li>
        <li>
          <a href="#contact" class="nav-item" data-link="contact">Contact</a>
        </li>
      </ul>
    </nav>
  </div>
  <div id="scroll-tracker">
    <div id="scroll-tracker-inner"></div>
  </div>
</header>

<script is:inline>
  const scrollInner = document.getElementById("scroll-tracker-inner");
  const header = document.getElementById("header");
  window.addEventListener("scroll", (e) => {
    const perc =
      (window.scrollY / (document.body.offsetHeight - window.innerHeight)) *
      100;
    scrollInner.style.width = `${(window.scrollY / (document.body.offsetHeight - window.innerHeight)) * 100}%`;
    // scrollInner.style.background = `linear-gradient(90deg, var(--primary) ${perc / 2}%, transparent, var(--primary) ${100 - perc / 2}%)`;
    if (window.scrollY > 300) header.style.background = "#000";
    else header.style.background = "#0000";
  });
</script>

<style>
  #header {
    width: 100%;
    position: sticky;
    top: 0;
    /* border-bottom: 1px solid var(--primary); */
    background: #0000;
    z-index: 100;
    transition: background 250ms;
  }
  #header-inner {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    max-width: var(--content-max);
    margin-left: auto;
    margin-right: auto;
    position: relative;
    font-size: 1.25rem;
    height: var(--header-height);
  }

  .title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text);
    span {
      color: var(--primary);
    }
  }

  #logo-btns {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    flex-grow: 1;
    width: 100%;
  }

  nav ul {
    display: flex;
    flex-direction: row;
    align-items: center;
    list-style: none;
  }
  .nav-item {
    color: var(--text);
    transition-duration: 300ms;
    place-content: center;
    padding: 0 1rem;
    font-weight: 400;
  }
  li a.nav-item:hover,
  li a.nav-item.active {
    color: var(--primary);
    text-shadow:
      0px 0px 8px var(--primary),
      0px 0px 14px var(--primary);
  }

  #btn-container {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  #btn-container > * {
    place-content: center;
    padding: 0 1em;
  }

  #scroll-tracker {
    width: 100%;
    height: 0.25rem;
    position: relative;
    top: 4px;
  }
  #scroll-tracker-inner {
    background: var(--primary);
    box-shadow: var(--shadow);
    height: 1px;
    width: 0%;
  }
  @media screen and (max-width: 700px) {
    html {
      font-size: 14px;
    }
  }
  @keyframes open {
    0% {
      height: 0%;
    }
    100% {
      height: 100%;
    }
  }
</style>
