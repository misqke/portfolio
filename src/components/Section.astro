---
const { fullHeight, id: sectionId, class: sectionClass } = Astro.props;
const minHeight = fullHeight ? "100vh" : "none";
---

<section id={sectionId} class={sectionClass} data-section>
  <slot />
</section>

<style define:vars={{ minHeight }}>
  section {
    width: 100%;
    height: 100%;
    min-height: var(--minHeight);
    padding-top: calc(var(--header-height) + 2rem);
    position: relative;
  }
</style>
