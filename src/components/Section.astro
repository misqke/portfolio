---
const {fullHeight, id:sectionId, class:sectionClass, innerClass} = Astro.props;
const minHeight = fullHeight ? "100vh" : "none";
---

<section id={sectionId} class={sectionClass} data-section>
  <div class={innerClass}>
    <slot />
  </div>
</section>

<style define:vars={{minHeight}}>
  section {
    width: 100%;
    height: 100%;
    min-height: var(--minHeight);
    padding-top: 5rem;
  }
  div {
    max-width: var(--content-max);
    margin-left: auto;
    margin-right: auto;
    padding: 1rem;
  }
</style>